---
import "../../styles/details.css";
import { projectsData } from "../../../public/scripts/projects.data.js";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";

/* ðŸ”‘ OBLIGATORIO */
export function getStaticPaths() {
  return projectsData.map(project => ({
    params: { slug: project.slug },
    props: { project }
  }));
}

/* ðŸ“¦ RECIBES EL PROYECTO */
const { project } = Astro.props;
---
<Layout title={project.title}>
  <Header/>
  <section class="project-detail">

    <!-- Title -->
    <header class="project-header">
      <h1 class="project-title">{project.title}</h1>
      <span class="project-badge">{project.category}</span>
    </header>

    <!-- Image -->
    <div class="project-cover-wrapper">
        <div class="project-cover-canvas">
          <canvas id="project-canvas" class="project-canvas" aria-hidden></canvas>
          <img
            src={project.cover}
            alt={project.title}
            class="project-cover"
          />
        </div>
    </div>

    <!-- Description -->
    <p class="project-description">
      {project.description}
    </p>

    <!-- Technologies -->
    <h3 class="project-subtitle">TecnologÃ­as utilizadas</h3>

    <ul class="project-tech-list">
      {project.technologies.map(tech => (
        <li class="project-tech-item">
          <span class="tech-dot"></span>
          {tech}
        </li>
      ))}
    </ul>

    <!-- CTA -->
    <a
      href={project.url}
      target="_blank"
      class="project-cta"
    >
      Ver proyecto en vivo â†’
    </a>

  </section>
</Layout>

<script type="module">
  // Canvas demo: simple particle field that reacts to mouse
  const canvas = document.getElementById('project-canvas');
  if (canvas) {
    const ctx = canvas.getContext('2d');
    let w = canvas.width = canvas.clientWidth;
    let h = canvas.height = canvas.clientHeight;

    const particles = [];
    const count = 40;

    function rand(min, max) { return Math.random() * (max - min) + min; }

    function resize() {
      w = canvas.width = canvas.clientWidth;
      h = canvas.height = canvas.clientHeight;
    }

    window.addEventListener('resize', resize);

    for (let i = 0; i < count; i++) {
      particles.push({
        x: rand(0, w), y: rand(0, h),
        r: rand(1, 3),
        vx: rand(-0.3, 0.3), vy: rand(-0.3, 0.3)
      });
    }

    let mouse = { x: -9999, y: -9999 };
    canvas.addEventListener('mousemove', (e) => {
      const rect = canvas.getBoundingClientRect();
      mouse.x = e.clientX - rect.left;
      mouse.y = e.clientY - rect.top;
    });
    canvas.addEventListener('mouseleave', () => { mouse.x = -9999; mouse.y = -9999; });

    function draw() {
      ctx.clearRect(0,0,w,h);
      for (const p of particles) {
        p.x += p.vx; p.y += p.vy;
        if (p.x < 0 || p.x > w) p.vx *= -1;
        if (p.y < 0 || p.y > h) p.vy *= -1;

        const dx = mouse.x - p.x;
        const dy = mouse.y - p.y;
        const dist = Math.hypot(dx, dy);
        if (dist < 120) {
          p.vx += dx * 0.0005;
          p.vy += dy * 0.0005;
        }

        ctx.beginPath();
        ctx.fillStyle = 'rgba(56,189,248,0.9)';
        ctx.arc(p.x, p.y, p.r, 0, Math.PI*2);
        ctx.fill();
      }
      requestAnimationFrame(draw);
    }

    resize();
    draw();
  }
</script>